<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/listItemEventType"
            android:src="@mipmap/ic_launcher"
            android:layout_weight="1" android:layout_margin="10dp"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/listItemInfo"
            android:layout_weight="4">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Some time ago..."
                android:id="@+id/infoTimeLapsed"
                android:textColor="@android:color/secondary_text_dark"
                android:layout_marginLeft="5dp" android:layout_marginTop="10dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Someone did something"
                android:id="@+id/infoMainMessage" android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp" android:typeface="monospace"
                android:textStyle="bold" android:textSize="16sp"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/listItemAdditionalInfo">
            <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/infoUserImage"
                    android:src="@android:drawable/sym_def_app_icon"
                    android:layout_weight="1"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Detailed message"
                    android:id="@+id/infoDetailedMessage"
                    android:textSize="12sp"
                    android:layout_weight="9" android:layout_margin="3dp" android:maxLength="140"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
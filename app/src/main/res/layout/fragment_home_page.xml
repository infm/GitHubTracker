<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.infmme.githubtracker.app.HomePageFragment">

    <ViewSwitcher
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/viewSwitcher"
            android:layout_gravity="center">
        <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/listViewHomePage"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/listViewHomePageEmptyView">
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/viewSwitcherImageView"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/ic_launcher"
                    android:layout_weight="2"
                    android:contentDescription="Error image"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Something went wrong"
                    android:layout_marginTop="20dp"
                    android:id="@+id/viewSwitcherTextView"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="3"/>
        </LinearLayout>
    </ViewSwitcher>
</FrameLayout>
